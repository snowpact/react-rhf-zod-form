{
  "name": "@snowpact/react-rhf-zod-form",
  "version": "1.2.0",
  "description": "Automatic form generation from Zod schemas with react-hook-form",
  "author": "Snowpact",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowpact/react-rhf-zod-form"
  },
  "keywords": [
    "react",
    "form",
    "zod",
    "react-hook-form",
    "rhf",
    "auto-form",
    "schema",
    "automatic",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "demo:dev": "vite --config demo/vite.config.ts",
    "demo:build": "vite build --config demo/vite.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "@hookform/resolvers": ">=3.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-hook-form": ">=7.0.0",
    "zod": ">=3.24.0"
  },
  "devDependencies": {
    "@hookform/resolvers": "^5.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/node": "^25.0.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "cssnano": "^7.0.0",
    "jsdom": "^25.0.0",
    "postcss": "^8.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^2.0.0",
    "zod": "^3.24.0"
  }
}
